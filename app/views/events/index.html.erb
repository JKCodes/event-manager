<% if @location %>
  <h1>Events list for <%= @location.name %></h1>
<% elsif @participant %>
  <h1>Events list for <%= participant_to_s(@participant) %></h1>
<% else %>
  <h1>Events list</h1>
<% end %>

<% if !@location %>
  <p><%= link_to "Add a new event", new_event_path %></p>
<% else %>
  <p><%= link_to "Create a new event for #{@location.name}", new_location_event_path %>
<% end %>

<% if !@todays_events.empty? %>
  <h2>Today's Events</h2>

  <%= render "events", { events: @todays_events, location: @location } %>
<% end %>  

<% if !@upcoming_events.empty? %>
  <h2>Upcoming Events</h2>

  <%= render "events", { events: @upcoming_events, location: @location } %>
<% end %>

<% if !@old_events.empty? %>
  <h2>Past Events</h2>

  <%= render "events", { events: @old_events, location: @location } %>
<% end %>