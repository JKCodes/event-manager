<%= render "layouts/form_errors", object: event %>

<% if @location %>
  <%= form_for event, url: event.id ? "/locations/#{@location.id}/events/#{event.id}" :"/locations/#{@location.id}/events" do |f| %>
    <%= render "form_details", {f: f, location: @location, event: event } %>
  <% end %>
<% else %>
  <%= form_for event do |f| %>
    <%= render "form_details", {f: f, event: event } %>
  <% end %>
<% end %>
