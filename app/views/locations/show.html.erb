<h1 id="main_head">Location Details -
  <%= link_to "edit", edit_location_path(@location) %> |
  <%= link_to "delete", location_path(@location), method: :delete, data: { confirm: "Are you sure?  WARNING: This will also destroy all events that are associated with this location."} %>
</h1>

<div class="location_details shadow">
  <%= link_to "<", location_path(@previous), class: "load_previous_location", data: {indexes: @indexes, current: @location.id} %>
  <%= link_to ">", location_path(@next), class: "load_next_location", data: {indexes: @indexes, current: @location.id} %>

  <h3 id="name">Name: <%= @location.name %></h3>
  <h3 id="street_address">Street Address: <%= @location.street_address %></h3>
  <h3 id="city">City: <%= @location.city %></h3>
  <h3 id="state">State: <%= @location.state %></h3>
  <h3 id="zipcode">Zipcode: <%= @location.zipcode %></h3>
</div>

<div class="location_events">
  <% if @location.events.any? %>
    <h1>Events</h1>
    <%= link_to "Load Events", location_events_path(@location), class: "load_location_events" %>
    <div class="events"> 
    </div>
  <% else %>
    <h1>No events at this location</h1>
  <% end %>
</div>