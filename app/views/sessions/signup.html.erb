<h1>Sign Up for Event Manager</h1>

<%= render "layouts/form_errors", object: @user %>

<%= form_for @user, url: signup_post_path do |f| %>
  <fieldset>
    <legend>Sign Up</legend>
    <div>
      <%= f.label :username, "Enter your username"%><br>
      <%= f.text_field :username %>
    </div>
    <br>
    <div>
      <%= f.label :email, "Enter your email"%><br>
      <%= f.email_field :email %>
    </div>
    <br>
    <div>
      <%= f.label :password, "Enter your password"%><br>
      <%= f.password_field :password %>
    </div>
    <br>
    <div>
      <%= f.label :password_confirmation, "Enter your password again"%><br>
      <%= f.password_field :password_confirmation %>
    </div>
    <br>
    <div>
      <%= f.submit "Sign Up" %>
    </div>
  </fieldset>
<% end %>