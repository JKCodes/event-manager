<h1>Sign Up for Event Manager</h1>

<%= form_for @user, url: signup_post_path do |f| %>
  <fieldset>
    <legend>Sign Up</legend>
    <div>
      <%= f.label :username, "Enter your username: " %>
      <%= f.text_field :username %>
    </div>

    <div>
      <%= f.label :email, "Enter your email: " %>
      <%= f.email_field :email %>
    </div>

    <div>
      <%= f.label :password, "Enter your password: " %>
      <%= f.password_field :password %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Enter your password again: " %>
      <%= f.password_field :password_confirmation %>
    </div>

    <div>
      <%= f.submit "Sign Up" %>
    </div>
  </fieldset>
<% end %>