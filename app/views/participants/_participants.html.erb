<table class="participant_table">
  <tr>
    <th>Nickname</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Phone Number</th>
    <th>Events</th>
  </tr>
  <% participants.each do |participant| %>
    <tr>
      <td><%= link_to participant.nickname, participant_path(participant) %></td>
      <td><%= participant.first_name %></td>
      <td><%= participant.last_name %></td>
      <td><%= participant.email %></td>
      <td><%= participant.phone_number %></td>
      <td><%= link_to participant.events.count, participant_events_path(participant) %>
    </tr>
  <% end %>
</table>